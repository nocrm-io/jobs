<%= form_with(model: lead, local: true) do |form| %>
  <% if lead.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(lead.errors.count, "error") %> prohibited this lead from being saved:</h2>

      <ul>
        <% lead.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row mb-2 mb-2">
    <%= form.label :name, class: 'col-sm-3 col-form-label text-right text-right' %>
    <div class="col-sm-9">
     <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :description, class: 'col-sm-3 col-form-label text-right' %>
    <div class="col-sm-9">    
      <%= form.text_area :description, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :status, class: 'col-sm-3 col-form-label text-right' %>
    <div class="col-sm-9">    
      <%= form.select :status, Lead::STATUSES, {}, class: 'form-select' %>
    </div>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :amount, class: 'col-sm-3 col-form-label text-right' %>
    <div class="col-sm-9">
      <%= form.number_field :amount, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :probability, class: 'col-sm-3 col-form-label text-right' %>
    <div class="col-sm-9"> 
      <%= form.number_field :probability, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row mb-2">
    <div class="offset-3 col-sm-9">    
      <%= form.submit 'Save', class: 'btn btn-outline-success' %>
    </div>
  </div>
<% end %>

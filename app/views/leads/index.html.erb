<p id="notice"><%= notice %></p>

<%= link_to 'New Lead', new_lead_path, class: 'btn btn-success float-right' %>

<h1>Leads</h1>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Amount</th>
      <th>Probability</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leads.each do |lead| %>
      <tr class="align-middle">
        <td><%= link_to lead.name, lead %></td>
        <td class="text-muted"><%= lead.description %></td>
        <td><%= lead.status %></td>
        <td class="text-success"><%= lead.amount %>â‚¬</td>
        <td><%= lead.probability %>%</td>
        <td><%= link_to 'Edit', edit_lead_path(lead), class: 'btn btn-sm btn-outline-primary' %></td>
        <td><%= link_to 'Destroy', lead, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>